{
    "layer": "top",
    "position": "top",
    "height": 46,
    "modules-left": [
        "custom/archlogo",
        "niri/workspaces",
        "cpu",
        "custom/separator",
        "memory",
        "custom/separator",
        "network"
    ],
    "modules-center": ["wlr/taskbar"],
    "modules-right": [
        "niri/language",
        "custom/separator",
        "pulseaudio",
        "pulseaudio#microphone",
        "custom/separator",
        "clock",
        "tray"
    ],
    "custom/archlogo": {
        "format": "Û∞£á",
        "tooltip": false,
        "on-click": "yofi"
    },
    "niri/workspaces": {
    },
    "cpu": {
        "interval": 3,
        "format": "Û∞çõ {usage}%",
        "tooltip": false,
        "on-click": "wezterm -e 'htop'"
    },
    "custom/separator": {
        "format": "|",
        "interval": "once",
        "tooltip": false
    },
    "memory": {
        "interval": 3,
        "format": "ÓøÖ  {used:0.2f}gb",
        "max-length": 10,
        "tooltip": false
    },
    "network": {
        // "interface": "wlp2*", // (Optional) To force the use of this interface
        "format-wifi": "Ôá´  ({signalStrength}%)",
        "format-ethernet": "Û∞àÄ {ipaddr}/{cidr}",
        "format-linked": "Û±öµ {ifname} (No IP)",
        "format-disconnected": "Û∞ñ™  Disconnected",
        "format-alt": "Û∞©†  {ifname}: {ipaddr}/{cidr}",
        "tooltip-format": "{essid}: {ipaddr}"
    },
    "wlr/taskbar": {
        "format": "{icon} {title}",
        "tooltip": false,
        "on-click": "activate",
        "ignore-list": [
			"File Upload", "org.telegram.desktop", "org.pulseaudio.pavucontrol"
		],
        "rewrite": {
            "(.{0,40}).* ‚Äî Zen Browser": "$1",
            "nvim.*": "Nvim"
        },
        "icon-size": 32
    },
    "niri/language": {
        "format": "{}",
        "format-en": "üá∫üá∏",
        "format-ru": "üá∑üá∫"
    },
    "pulseaudio": {
        "format": "{icon} {volume}%",
        "format-bluetooth": "Û∞ÇØ {icon} {volume}%",
        "format-bluetooth-muted": "Û∞óø ",
        "format-muted": "Û∞ùü ",
        "format-icons": {
            "default": ["ÔÄ¶", "ÔÄß", "ÔÄ® "]
        },
        "on-scroll-up": "pamixer -i 5",
        "on-scroll-down": "pamixer -d 5",
        "on-click": "pamixer -t"
    },
    "pulseaudio#microphone": {
        "format": "{format_source}",
        "format-source": "ÔÑ∞ {volume}%",
        "format-source-muted": "ÔÑ± ",
        "on-scroll-up": "pamixer --default-source -i 5",
        "on-scroll-down": "pamixer --default-source -d 5",
        "on-click": "pamixer --default-source -t"
    },
    "clock": {
        "interval": 1,
        "locale": "C", 
        "format": "ÔÄó {:%I:%M %p}",
        "format-alt": "Ó™∞ {:%A, %B %d, %Y (%R)}",
        "tooltip-format": "<tt><small>{calendar}</small></tt>",
        "calendar": {
                    "mode"          : "year",
                    "mode-mon-col"  : 3,
                    "weeks-pos"     : "right",
                    "on-scroll"     : 1,
                    "on-click-right": "mode",
                    "format": {
                              "months":     "<span color='#ffead3'><b>{}</b></span>",
                              "days":       "<span color='#ecc6d9'><b>{}</b></span>",
                              "weeks":      "<span color='#99ffdd'><b>W{}</b></span>",
                              "weekdays":   "<span color='#ffcc66'><b>{}</b></span>",
                              "today":      "<span color='#ff6699'><b><u>{}</u></b></span>"
                              }
                    },
        "actions":  {
                    "on-click-right": "mode",
                    "on-click-forward": "tz_up",
                    "on-click-backward": "tz_down",
                    "on-scroll-up": "shift_up",
                    "on-scroll-down": "shift_down"
        }
    }
}

